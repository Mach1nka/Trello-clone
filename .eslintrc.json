{
    "env": {
        "browser": true,
        "es6": true,
        "commonjs": true
    },
    "settings": {
        "import/resolver": {
          "node": {
            "extensions": [
              ".js",
              ".jsx",
              ".ts",
              ".d.ts",
              ".tsx"
            ]
          }
        }
      },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "airbnb", 
        "airbnb/hooks"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12
    },
    "plugins": [
        "@typescript-eslint",
        "import",
        "prettier"
    ],
    "rules": {
        "comma-dangle": ["error", "never"],
        "semi": ["error", "always"],
        "quotes": ["warn", "single"],
        "prettier/prettier": "error",
        "@typescript-eslint/no-var-requires": 0,

        "import/prefer-default-export": "off",
        "import/extensions": [
          "error",
          "ignorePackages",
          {
            "js": "never",
            "jsx": "never",
            "ts": "never",
            "tsx": "never",
            "svg": "never"
          }
        ]
    }
}
